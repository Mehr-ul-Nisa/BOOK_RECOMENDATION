@{
     ViewData["Title"] = "Form";
}

   
    
<link rel="stylesheet" name="css/text" href="css/sstyle.css">


    <form class="form" method="post" action="/home/Form">
    <label for="first_name">First Name</label>
    <input type="text" placeholder="Enter your first name" id="first_name" name="fname" />
    <br />
    <label for="last_name">Last Name</label>
    <input type="text" placeholder="Enter your last name" id="last_name"  name="lname" />
    <br />
    <label for="email">Email</label>
    <input type="email" placeholder="Enter your email id" id="email"  name="mail" />
    <br />
    <label for="phone">Phone Number</label>
    <input type="text" placeholder="Enter your phone number" id="phone"  name="p_no" pattern="[7-9]{1}[0-9]{9}" title="Phone number with 7-9 and remaing 9 digit with 0-9" />
    <br />
    <label for="gen">Gender</label>
    <br />
    <label>M</label>
    <input type="radio" name="gender"/>
    <label>F</label>
    <input type="radio" name="gender"/>
    <br />
    <label for="customer">Customer</label>
    <select id="customer">
        <option>Sales</option>
        <option>IT</option>
    </select>
    <br />
    <label for="msg">Message</label>
    <textarea name="comment" placeholder="Enter your message here ........" id="msg"></textarea>
    <br />
    <br />
    <button type="submit" > Save</button>
</form>

<h2>@ViewBag.message</h2>
