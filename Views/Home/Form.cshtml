@{<form class="form">
    <label for="first_name">First Name</label>
    <input type="text" placeholder="Enter your first name" id="first_name" />
    <br />
    <label for="last_name">First Name</label>
    <input type="text" placeholder="Enter your last name" id="last_name" />
    <br />
    <label for="email">Email</label>
    <input type="email" placeholder="Enter your email id" id="email" />
    <br />
    <label for="phone">Phone Number</label>
    <input type="text" placeholder="Enter your phone number" id="phone" pattern="[7-9]{1}[0-9]{9}" title="Phone number with 7-9 and remaing 9 digit with 0-9" />
    <br />
    <label for="gender">Gender</label>
    <input type="radio" placeholder="Enter your Gender" id="gender" />
    <br />
    <label for="customer">Message</label>
    <select id="customer">
        <option>Sales</option>
        <option>IT</option>
    </select>
    <br />
    <label for="msg">Message</label>
    <textarea name="comment" placeholder="Enter your message here ........" id="msg"></textarea>
    <br />
    <br />
    <button type="submit"> Save</button>
</form>